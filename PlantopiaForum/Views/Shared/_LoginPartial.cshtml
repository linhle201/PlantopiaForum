@using Microsoft.AspNetCore.Identity
@using PlantopiaForum.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-left">
            <a class="nav-link fs-5 fw-bold" style="color: darkgreen" asp-area="" asp-controller="Discussions" asp-action="Index">Discussion</a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <a id="manage" class="nav-link fs-6" style="color: darkgreen" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link fs-6" style="color: darkgreen">Logout</button>
            </form>
        </li>
        
    }
    else
    {
        <li class="nav-item d-flex align-items-center">
            <a class="nav-link fs-6" style="color: darkgreen" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <a class="nav-link fs-6" style="color: darkgreen" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
