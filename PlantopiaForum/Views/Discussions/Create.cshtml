@model PlantopiaForum.Models.Discussion

@{
    ViewData["Title"] = "Create";
}

<h1 class="fw-bold text-center mt-4" style="color: darkgreen;">Create a New Discussion</h1>

<h4 class="mt-4 text-center" style="color: #555;">Discussion Details</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label fw-bold" style="color: darkgreen;"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter discussion title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Content" class="form-label fw-bold" style="color: darkgreen;"></label>
                <textarea asp-for="Content" class="form-control" rows="5" placeholder="Enter discussion content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="form-label fw-bold" style="color: darkgreen;"></label>
                <input type="file" asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm w-100 fw-bold">Create Discussion</button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-light text-dark fw-bold">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}