@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 mt-4">
        <form id="registerForm" enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class=" mb-3">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class=" mb-3">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class=" mb-3">
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @* BEGIN: ApplicationUser custom fields *@
            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Location" class="form-label"></label>
                <input asp-for="Input.Location" class="form-control" />
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>
            @*<div class="mb-3">
                <label asp-for="Input.ImageFilename" class="form-label"></label>
                <textarea asp-for="Input.ImageFilename" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Input.ImageFilename" class="text-danger"></span>
            </div>*@
            <div class="mb-3">
                <label asp-for="Input.ImageFile" class="form-label"></label>
                <input type="file" asp-for="Input.ImageFile" class="form-control" />
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div>
            @* END: ApplicationUser custom fields *@
            <button id="registerSubmit" type="submit" class="btn bg-white btn-sm w-2/3 fw-bold" style="font-family: 'Pacifico', cursive; color: darkgreen; box-shadow: 5px 4px 10px rgba(0, 100, 0, 0.2); transition: transform 0.3s ease;"
                    onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='5px 4px 15px rgba(0, 100, 0, 0.4)';"
                    onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='5px 4px 10px rgba(0, 100, 0, 0.2)';">
                Register
            </button>
        </form>
    </div>
